<p id="notice"><%= notice %></p>

<h1>Bulleting Boards</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bulleting_boards.each do |bulleting_board| %>
      <tr>
        <td><%= bulleting_board.name %></td>
        <td><%= bulleting_board.description %></td>
        <td><%= bulleting_board.picture %></td>
        <td><%= link_to 'Show', bulleting_board %></td>
        <td><%= link_to 'Edit', edit_bulleting_board_path(bulleting_board) %></td>
        <td><%= link_to 'Destroy', bulleting_board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

